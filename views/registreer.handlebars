<html class="loginpagina">
    <section>
        <h1>Registreren</h1>
    </section>
     {{#if errors}}
        {{#each errors}}
        <strong>{{this.message}}</strong>
        {{/each}}
    {{/if}}
    <div>
        <form action="/registreer" method="POST">
            <label for="username">Gebruikersnaam</label>
            <input type="username" name="username" placeholder="Bijvoorbeeld:Sonja007" id="username" required>
            
            <label for="password">Wachtwoord</label>
            <input type="password" name="password" placeholder="minimaal 6 karakters" id="password" required>

            <label for="password2">Bevestig uw wachtwoord</label>
            <input type="password" name="password2" placeholder="minimaal 6 karakters" id="password2" required>

            <label for="sport">Sportvoorkeur:</label>
            <select id="sport" name="sport">
                <option selected value="{{profiel.sport}}">{{profiel.sport}}</option>
                <option value="voetbal">Voetbal</option>
                <option value="darten">Darten</option>
                <option value="tennis">Tennis</option>
            </select>
        
            <label for="leeftijd">Leeftijd:</label>
                <select id="leeftijd" name="leeftijd">
                    <option selected value="{{profiel.leeftijd}}">{{profiel.leeftijd}}</option>
                    <option value="18-30">18-30</option>
                    <option value="30-65">30-65</option>
                    <option value="65+">65+</option>
                </select>

            <label for="niveau">Niveau:</label>
                <select id="niveau" name="niveau">
                    <option selected value="{{profiel.niveau}}">{{profiel.niveau}}</option>
                    <option value="beginner">Beginner</option>
                    <option value="goed">Goed</option>
                    <option value="heel goed">Heel goed</option>
                </select>

            <button type="submit">Registeren!</button>
        </form> 
    </div>
    <p>Al een account? <a href="/">Login</a></p>

</html>